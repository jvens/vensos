

#include "uart.hpp"

//-------------------------------------------------------------------
//-------------------------------------------------------------------

void PUT32 ( unsigned int , unsigned int  ) __asm__("PUT32");
unsigned int GET32 ( unsigned int ) __asm__("GET32");

//-------------------------------------------------------------------

//-------------------------------------------------------------------
void Uart::send ( unsigned int x )
{
    while (( GET32(UART_LSR) & 0x20) == 0) continue;
    PUT32(UART_THR,x);
}
//-------------------------------------------------------------------
unsigned int Uart::recv ( void )
{
    while (( GET32(UART_LSR) & 0x01) == 0) continue;
    return(GET32(UART_RBR));
}
//-------------------------------------------------------------------
Uart::Uart(void)
{
}
//-------------------------------------------------------------------
void Uart::fifo_flush ( void )
{
    while (( GET32(UART_LSR) & 0x40) == 0) continue;
}
//-------------------------------------------------------------------------
void Uart::hexstrings ( unsigned int d )
{
    unsigned int rb;
    unsigned int rc;

    rb=32;
    while(1)
    {
        rb-=4;
        rc=(d>>rb)&0xF;
        if(rc>9) rc+=0x37; else rc+=0x30;
        send(rc);
        if(rb==0) break;
    }
    send(0x20);
}
//-------------------------------------------------------------------------
void Uart::hexstring ( unsigned int d )
{
    hexstrings(d);
    send(0x0D);
    send(0x0A);
}
